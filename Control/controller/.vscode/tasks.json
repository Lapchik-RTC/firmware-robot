{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lXInput",
                "${workspaceFolder}/src/main.cpp",
                "-o", "${workspaceFolder}/main.exe"  // Просто в корне
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}